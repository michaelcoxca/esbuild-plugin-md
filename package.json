  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/martonlederer/esbuild-plugin-markdown",
  "author": "Marton Lederer <marton@lederer.hu>",
