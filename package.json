{
  "name": "esbuild-plugin-md",
  "version": "0.1.3",
  "description": "Import markdown files with esbuild",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/michaelcoxca/esbuild-plugin-md",
  "author": "Michael Cox <hello@michaelcox.ca>",
  "contributors": [
    "Marton Lederer <marton@lederer.hu>"
  ],
  "license": "MIT",
  "private": false,
  "keywords": [
    "esbuild-plugin",
    "markdown"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "node esbuild.config.mjs --dev",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "build": "node esbuild.config.mjs && tsc --project tsconfig.json --emitDeclarationOnly --declaration --outDir dist",
    "test": "vitest",
    "prepare": "npm run build"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "fs-extra": "^11.3.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.2"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^25.2.3",
    "dompurify": "^3.3.1",
    "esbuild": "^0.27.3",
    "jsdom": "^28.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
